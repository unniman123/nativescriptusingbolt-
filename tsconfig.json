{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "types": ["node"]
  },
  "include": [
    "app/**/*",
    "types/**/*"
  ],
  "files": ["./references.d.ts"],
  "exclude": [
    "node_modules",
    "platforms",
    "e2e",
    "**/*.spec.ts"
  ]
}